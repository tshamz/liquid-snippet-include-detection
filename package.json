{
	"name": "liquid-snippet-include-detection",
	"displayName": "Liquid Snippet Include Detection",
	"description": "A Visual Studio Code extension that tells you whether other liquid files are including the snippet or section you're currently viewing.",
	"version": "0.15.0",
	"publisher": "tshamz",
	"repository": {
		"type": "git",
		"url": "https://github.com/tshamz/liquid-snippet-include-detection"
	},
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": [
		"Other",
		"Linters",
		"Programming Languages"
	],
	"keywords": [
		"Shopify",
		"Liquid",
		"Liquid Snippets",
		"Jose Canseco",
		"Theming"
	],
	"icon": "icon.jpg",
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
	}
}
